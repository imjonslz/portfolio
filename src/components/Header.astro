---
import "../styles/css-components/header.css";

const currentPath = Astro.url.pathname;
---

<header class="header">
  <nav role="navigation" aria-label="Menú principal">
    <a href="/" class="logo"
      >
        <svg aria-label="Ir al inicio" width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
<path d="M37.123 29.1484H37.124V38.5146L24 46.1787L10.876 38.5146V27.4453C14.6168 27.4453 17.6493 30.517 17.6494 34.2578L24 38.0889L30.3496 34.2578V28.2969H20.1895V21.4844H37.123V29.1484ZM37.124 9.45801V18.791H35.4414C32.6298 18.791 30.3507 16.5118 30.3506 13.7002L24 9.88184L17.6494 13.7002V18.791H10.876V9.45801L24 1.82129L37.124 9.45801Z" fill="currentColor"/>
</svg>
      
      </a
    >
    <ul class="nav-links">
      <li>
        <a
          href="/about"
          class={`link ${currentPath === "/about" ? "active" : ""}`}
          aria-current={currentPath === "/about" ? "page" : undefined}>Sobre mi</a
        >
      </li>
      <li>
        <a
          href="/projects"
          class={`link ${currentPath === "/projects" ? "active" : ""}`} aria-current={currentPath === "/projects" ? "page" : undefined}
          >Proyectos</a
        >
      </li>
      <li>
        <a
          href="/contact"
          class={`link ${currentPath === "/contact" ? "active" : ""}`} aria-current={currentPath === "/contact" ? "page" : undefined}
          >Contáctame</a
        >
      </li>
      <li>
        <a
          href="/CV_Jonathan_Salazar.pdf"
          target="_blank"
          rel="noopener noreferrer"
          class="button"
        >
          Resumen / CV</a
        >
      </li>
    </ul>
  </nav>
</header>
