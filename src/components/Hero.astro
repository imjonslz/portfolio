---
import { ChevronDown } from "lucide-astro";
import "../styles/components/hero.css";

const { title, subtitle } = Astro.props;
---

<section id="hero">
  <div class="wrapper">
    <span>{subtitle}</span>
    <h1>{title}</h1>
  </div>
  <div class="icon-wrapper">
    <ChevronDown class="icon-scroll-dwn" />
  </div>
</section>
