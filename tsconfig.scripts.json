  "compilerOptions": {
    "outDir": "public/scripts/components",
    "rootDir": "src/scripts/components",
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "noEmit": false,
    "allowImportingTsExtensions": false
